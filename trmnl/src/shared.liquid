{% assign messages = messages | reverse %}

{% template message %}
{% if size == 'small' %}
    {% assign label_size = 'label--small' %}
    {% assign content_size = '' %}
{% else %}
    {% assign label_size = '' %}
    {% assign content_size = 'content--large' %}
{% endif %}

<div class="item pb--1">
    <div class="content gap--xsmall">
        <div class="flex gap--space-between w--full">
            <div class="label {{ label_size }} label--inverted">{{ message.subject }}</div>
            <div class="label {{ label_size }}">
                {% unless hide_sender %}
                    {{ message.sender_name }} :: 
                {% endunless %}
                {{ message.time | date: "%b %d" }}
            </div>
        </div>
        <div class="richtext">
            <div class="content {{ content_size }}">{{ message.body }}</div>
        </div>
    </div>
</div>
{% endtemplate %}

